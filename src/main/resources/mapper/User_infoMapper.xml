<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luxury.mapper.User_infoMapper">

    <!---查询列表-->
    <select id="selectList" resultType="User_info">
    select * from User_info
    </select>

    <!-- 增加 -->
    <insert id="addUser" parameterType="com.luxury.model.User_info">
        INSERT INTO user_info
        (id,uname,create_time)
        VALUES
        (#{id},#{uname},#{create_time})
    </insert>

    <!-- 修改 -->
    <update id="editUser"  parameterType="com.luxury.model.User_info" >
        update user_info set uname=#{uname},create_time=#{create_time}
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id="delUser"  parameterType="java.lang.String" >
        delete from  user_info
        where id=#{id}
    </delete>

</mapper>